            label="COM_DZPRODUCT_FORM_LBL_ITEM_LONG_DESC"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_LONG_DESC" 
                
                
                
            buttons="article, image"
            filter="raw" /> 

