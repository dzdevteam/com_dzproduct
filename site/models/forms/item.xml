            label="COM_DZPRODUCT_FORM_LBL_ITEM_PRICE"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_PRICE" 
                
                
                
            filter="raw" /> 

       <field name="saleoff" type="text"
                
            label="COM_DZPRODUCT_FORM_LBL_ITEM_SALEOFF"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_SALEOFF" 
                
                
                
            filter="raw" /> 

       <field name="metakey" type="textarea"
                
            label="COM_DZPRODUCT_FORM_LBL_ITEM_METAKEY"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_METAKEY" 
                
                
                
            cols="100"
            rows="8"
            filter="string" /> 

       <field name="metadesc" type="textarea"
                
            label="COM_DZPRODUCT_FORM_LBL_ITEM_METADESC"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_METADESC" 
                
                
                
            cols="100"
            rows="8"
            filter="string" /> 

       <field name="metadata" type="editor" buttons="true"
        class="inputbox"
        filter="safehtml"
        
        
        
        
            label="COM_DZPRODUCT_FORM_LBL_ITEM_METADATA"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_METADATA"  /> 

       <field name="params" type="editor" buttons="true"
        class="inputbox"
        filter="safehtml"
        
        
        
        
            label="COM_DZPRODUCT_FORM_LBL_ITEM_PARAMS"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_PARAMS"  /> 

