        class="inputbox"
        filter="safehtml"
        
        
        
        
            label="COM_DZPRODUCT_FORM_LBL_ITEM_OTHER_IMAGES"
            description="COM_DZPRODUCT_FORM_DESC_ITEM_OTHER_IMAGES"  /> 

